<div class="row">
  <div class="col-md-3">
    <%= form_with url: search_path, local: true, method: :get, class: 'form_box' do |f| %>
      <%= f.text_field :word, placeholder: "検索したい内容を記入してください" %>
      <%= f.submit "検索", class: 'btn' %>
    <% end %>
    <h2>New Image</h2>
  </div>
  <div class="col-md-8 offset-md-1">
    <h2>Images</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
       <tbody>
        <% @images.each do |image| %>
          <tr>
            <td><%= image_tag(image.get_image(100, 100)) %></td>
            <td><%= link_to image.title, image_path(image) %></td>
            <td><%= image.body %></td>
            <td><%= link_to 'Show', image_path(image), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Edit', edit_image_path(image), class: 'btn btn-secondary' %></td>
            <td><%= link_to 'Destroy', image_path(image), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>